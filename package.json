{
  "name": "stride_actions",
  "version": "0.0.1",
  "description": "I'm an example of Stride actions.",
  "author": "Sheldon Callahan <sheldon@atlassian.com>",
  "main": "app.js",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "verbose": "DEBUG=stride-boilerplate:* npm start",
    "dev": "npm run lint && DEBUG=stride-boilerplate nodemon ./bin/www",
    "lint": "eslint . --ext .js --fix --quiet",
    "depcheck": "depcheck",
    "testdev": "jest --watch",
    "test": "jest"
  },
  "dependencies": {
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv": "^5.0.1",
    "express": "~4.15.5",
    "hbs": "~4.0.1",
    "jwt-simple": "^0.5.1",
    "morgan": "~1.9.0",
    "prettyjson": "^1.2.1",
    "request": "^2.72.0"
  },
  "devDependencies": {
    "depcheck": "^0.6.9",
    "eslint": "^4.19.1",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^22.4.3",
    "nodemon": "^1.17.2",
    "prettier": "^1.11.1",
    "supertest": "bkeepers/supertest#unknown-errors"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "jest",
      "standard",
      "prettier"
    ],
    "env": {
      "es6": true,
      "node": true,
      "jest/globals": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": false,
          "trailingComma": "none",
          "bracketSpacing": true
        }
      ]
    }
  }
}
